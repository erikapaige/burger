<h1>The Buzz About Burgers</h1>
<img id="burgerGraphic" src="assets/burgerGraphic.png" alt="graphic of burger">


{{!-- form to receive user input --}}
<div>
  <form>
    <p>
      {{!-- input box for user to enter burger name  --}}
      <label for="burger_name"> Name a burger!</label>
      <input type="text" name="burger_name" id="burger_name">
    </p>
    {{!-- button for user to submit burger name --}}
    <button id="addBurger">Add Burger</button>
  </form>
</div>

  {{!-- unordered list to store burgers and names --}}
  <div id="notDevoured">
    <ul id="devour">
      <p class="eatTitle">EAT ME</p>
      {{!-- use 'each loop' to go through each burger and have mark-up appear for each one and check if devoured is false --}}
      {{#each burgers}}
      {{#unless devoured}}
      <li class="userBurgerInput">
        {{!-- want to grab burger name off of each object, use dot notation to grab each individual burger name--}}
        {{this.burger_name}}

        {{!-- this.id grabs the primary key id off each burger, on-click checks if true or false --}}
        <button className="devour" id="devourButton" data-id="{{this.id}}" onclick="devourBurger({{this.id}})">Devour</button>
      </li>
      {{!-- closing bracket to 'each' and 'unless' --}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

{{!-- unordered list (on right side) of burgers and names devoured --}}
<div id="burgerDevoured">
  <ul id="devouredBurger">
    <p class="eatTitle">YUM, that was delicious</p>
    {{!-- use 'each loop' to go through each burger and if devoured (aka true) move to this list --}}
    {{#each burgers}}
    {{#if devoured}}
      <li class="userBurgerInput" id="yum">
        {{this.burger_name}}
      </li>
    {{/if}}
    {{/each}}
  </ul>
</div>
